<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css">
<%- include('../partials/nav') %>

<main>
  <h1 id="all-flights-h1"><%= title %></h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Airline</th>
        <th scope="col">Airport</th>
        <th scope="col">Flight Number</th>
        <th scope="col">Departing Date</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(flight) {%>
        <tr>
          <td scope="row"><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
          <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>
          <td>
            <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-dark">X</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>