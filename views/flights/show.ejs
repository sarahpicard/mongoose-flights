<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: <%= flight.airline %></div>
    <div>Airport: <%= flight.airport %></div>
    <div>Flight Number: <%= flight.flightNo %></div>
    <div>Departure Date & Time: <%= flight.departs %></div>
    <a href="/flights/<%= flight._id %>/edit">
    <button>Edit Flight</button>
    </a>
  </section>
  <h2>Tickets</h2>
  <form id="add-flight-form" action="/flights/<%= flight._id %>/tickets" method=""POST>
    <label for="seat">Seat:</label>
    <input type="text" name="seat" required pattern="[A-F][1-9]\d?">
    <label for="price">Price:</label>
    <input type="number" name="price">
    <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr> 
          <th>Date</th>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.createdAt.toLocaleDateString() %></td>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>
</main>


<%- include('../partials/footer') %>